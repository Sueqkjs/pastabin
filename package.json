{
  "name": "pastabin",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.cjs",
  "type": "module",
  "scripts": {
    "lint:js": "tsc --no-emit",
    "lint:rust": "cd src/wasm && cargo check",
    "build:js": "rm -r dist && mkdir dist && node esbuild.config.js",
    "build:rust": "cd src/wasm && rm -rf node_pkg web_pkg && wasm-pack build -t nodejs && mv pkg node_pkg && wasm-pack build -t web && mv pkg web_pkg",
    "build": "npm run build:rust && npm run build:js",
    "format": "prettier -w src/*.ts src/**/*.ts",
    "start": "npm run format && npm run build && node --enable-source-maps .",
    "test": "npm run build && dev=true node --enable-source-maps ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sueqkjs/pastabin.git"
  },
  "author": "Sueqkjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sueqkjs/pastabin/issues"
  },
  "homepage": "https://github.com/Sueqkjs/pastabin#readme",
  "dependencies": {
    "buffer": "^6.0.3",
    "canvas": "^2.8.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.10",
    "esbuild-svelte": "^0.6.0",
    "express": "^4.17.2",
    "highlight.js": "^11.4.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.5.1",
    "proxy-deep": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.49.0",
    "svelte-preprocess": "^4.10.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13"
  }
}
